<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_snapshot_container"
    android:layout_width="300dp"
    android:layout_height="376dp"
    android:layout_gravity="center"
    android:paddingBottom="5dp"
    android:alpha="10"
    android:background="@drawable/infowindow_style">
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/imageView_dialog"
            android:layout_width="240dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            app:srcCompat="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView_dialogText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_dialogSummary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView_dialogTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_dialog"
            android:layout_centerHorizontal="true"
            android:text="Time"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView_dialogSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_dialogTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:textColor="#ffffff"
            android:text="Summary" />

        <Button
            android:id="@+id/textView_dialogToFullPost"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_see_full_post_style"
            android:drawableEnd="@drawable/ic_see_full_post"
            android:text="Long Click to See Full Post"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>


</RelativeLayout>